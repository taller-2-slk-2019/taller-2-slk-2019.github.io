#%RAML 1.0 Library

types:
    User:
        type: object
        properties:
            id: integer
            name: string
            surname: string
            email: string
            picture: string
            updatedAt: datetime
            createdAt: datetime
            latitude?: number
            longitude?: number

    UserRole:
        type: object
        properties:
            role: string
            updatedAt: datetime
            createdAt: datetime

    UserWithRole:
        type: User
        properties:
            UserOrganizations: UserRole

    Organization:
        type: object
        properties:
            id: integer
            name: string
            picture: string
            latitude: number
            longitude: number
            description: string
            welcome: string
            updatedAt: datetime
            createdAt: datetime

    OrganizationProfile:
        type: Organization
        properties:
            Users: UserWithRole[]
            Channels: Channel[]

    Channel:
        type: object
        properties:
            id: integer
            name: string
            description: string
            welcome: string
            updatedAt: datetime
            createdAt: datetime